<div id="books-container">
  <h2>Books List</h2>
  <% @books.each do |book| %>
    <div class="book-item">
      <div class="book-item-img">
        <%= image_tag book.image %>
      </div>
      <div class="book-item-content">
        <h3><%= book.title %></h3>
        <br>
        <p><%= book.description %></p>
      </div>
    </div>
  <% end %>
</div>

