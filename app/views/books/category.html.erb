<div class="notice-area">
  <p id="notice"><%= notice %></p>
</div>

<div class="books-container">
  <h2>Books List</h2>
  <% if @books.count != 0 %>
  <% @books.each do |book| %>
    <div class="book-item">
      <div class="book-item-img">
        <%= image_tag book.image %>
      </div>
      <div class="book-item-content">
        <h3><%= book.title %></h3>
        <br>
        <p><%= book.description %></p>
      </div>
      <% if book.category.name %>
        <div class="book-category-container">
          <p><strong>Category:</strong> <%= book.category.name %></p>
        </div>
      <% end %>
    </div>
  <% end %>
  <% else %>
    <h5>There are no books in this category yet.</h5>
  <% end %>
</div>

<div class="book-filter-content">
  <h2>Categories</h2>
  <%= link_to 'All', books_path %>
  <% @categories.each do |category| %>
    <%= link_to category.name, book_category_path(:category => category.id) %>
  <% end %>
</div>
